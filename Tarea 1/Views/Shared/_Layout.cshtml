<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tarea_1</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css">
    <link rel="stylesheet" href="~/css/header.css"/>    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="~/images/DK.png" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>                
                <div class="nav_list"> 
                    <a class="nav_link active" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class='bx bx-home nav_icon'></i> 
                        <span class="nav_name">Inicio</span> 
                    </a> 
                    <a class="nav_link" asp-area="" asp-controller="Home" asp-action="Angulo">
                        <i class='bx bx-math nav_icon'></i> 
                        <span class="nav_name">Calcular &Aacute;ngulos</span> 
                    </a> 
                </div>
            </div> 
            <a href="#" class="nav_link btnGoBack"> 
                <i class='bx bx-arrow-back nav_icon'></i> 
                <span class="nav_name">Volver</span> 
            </a>
        </nav>
    </div>
    <!--Container Main start-->
    <main role="main" class="height-100 bg-light">
        @RenderBody()
    </main>
    <div class="messageBox" id="messageBox">
        <div class="contentMessage">
            <div class="message">
  
            </div>
            <div class="boxCloseMessage">
                <span class="icon" id="closeMessageBox">
                    <i class="fa-regular fa-circle-xmark"></i>
                </span>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Tarea_1 -
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/fontawesome/js/all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
